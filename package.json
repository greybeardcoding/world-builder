{
  "name": "world-builder",
  "version": "0.1.0",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && npm run build-electron && electron .",
    "build-electron": "tsc electron/*.ts --outDir dist/electron --target es2020 --module commonjs --moduleResolution node",
    "dist": "npm run build && npm run build-electron && electron-builder",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "@tiptap/core": "^3.0.1",
    "@tiptap/extension-blockquote": "^3.0.1",
    "@tiptap/extension-code-block": "^3.0.1",
    "@tiptap/extension-color": "^3.0.1",
    "@tiptap/extension-highlight": "^3.0.1",
    "@tiptap/extension-horizontal-rule": "^3.0.1",
    "@tiptap/extension-image": "^3.0.1",
    "@tiptap/extension-link": "^3.0.1",
    "@tiptap/extension-list-item": "^3.0.1",
    "@tiptap/extension-placeholder": "^3.0.1",
    "@tiptap/extension-table": "^3.0.1",
    "@tiptap/extension-task-item": "^3.0.1",
    "@tiptap/extension-task-list": "^3.0.1",
    "@tiptap/extension-text-align": "^3.0.1",
    "@tiptap/extension-text-style": "^3.0.1",
    "@tiptap/react": "^3.0.1",
    "@tiptap/starter-kit": "^3.0.1",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  }
}
